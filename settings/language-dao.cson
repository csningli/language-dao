# If you want some examples of settings, check out:
# https://github.com/atom/language-gfm/blob/master/settings/gfm.cson

'.source.dao':
  'editor':
    'autoIndentOnPaste': false
    'softTabs': true
    'tabLength': 4
    'commentStart': '# '
    'increaseIndentPattern': '^\\s*(class|inteface|routine|else|for|if|for|while|switch)\\b.*:\\s*$'
    'decreaseIndentPattern': '^\\s*(else)\\b.*:\\s*$'
